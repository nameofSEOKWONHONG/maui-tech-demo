<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="Friday.MobileApplication.ContentViews.LabelInputView">
    <StackLayout Padding="5">
        <Label Text="{Binding LabelText}" TextColor="{StaticResource Gray500}"
               FontSize="16"/>
        <Grid Margin="0,5" Padding="5">
            <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5"/>
            <Entry x:Name="Input" 
                   Text="{Binding EntryText}" 
                   Placeholder="{Binding EntryPlaceholderText}" 
                   PlaceholderColor="#C7C7C7" 
                   HorizontalOptions="StartAndExpand" 
                   VerticalOptions="Center" 
                   Completed="OnCompleted"
                   Unfocused="OnUnfocused"                   
                   FontSize="18"
                   MaxLength="200"
                   ReturnType="Done"/>
        </Grid>
    </StackLayout>
</ContentView>
